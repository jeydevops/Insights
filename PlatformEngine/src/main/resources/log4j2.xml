<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p:: %m%n" />
		</Console>
 
		<RollingFile name="RollingFile" filename="/usr/INSIGHTS_HOME/logs/PlatformEngine/PlatformEngine.log"
			filepattern="/usr/INSIGHTS_HOME/logs/PlatformEngine/log4j_PlatformEngine.log">
			<PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} %p [%t]:%c{3}.%M()%L - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
 
	</Appenders>
		<Loggers>
		<Logger name="com.cognizant" level="debug">
				<AppenderRef ref="RollingFile" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>
</Configuration>